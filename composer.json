{
    "name": "axy/pkg-tpl",
    "type": "library",
    "description": "Composer package template",
    "keywords": [],
    "homepage": "https://github.com/axypro/pkg-tpl",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Grigoriev",
            "email": "go.vasac@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~10.0.15",
        "squizlabs/php_codesniffer": "=3.7.1"
    },
    "autoload": {
        "psr-4": {
            "axy\\pkg\\tpl\\": "src",
            "axy\\pkg\\tpl\\tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/tests/*",
            "/devops/*",
            "/doc/*",
            "/*.sh",
            "/*.xml.dist",
            "/CHANGELOG.md"
        ]
    }
}
